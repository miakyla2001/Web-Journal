body {
	margin: 0;
	padding: 0;
	font-family: Arial, sans-serif;
}

#nav {
	background-color: #333;
	color: #fff;
	height: 100%;
	left: 0;
	top: 0;
	padding: 20px;
}

#nav ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

#nav li {
	margin-bottom: 10px;
    display:inline;
}

#nav a {
	color: #fff;
	text-decoration: none;
	
	padding: 10px;
	border-radius: 5px;
}

#nav a:hover {
	background-color: #555;
}
.image{
    width: 500px;
}